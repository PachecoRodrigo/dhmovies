<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Actuaciones</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href='/stylesheets/styleheader.css'>
</head>
<body>
  <!-- start header -->
    <%- include('partials/header'); %>
  <!-- end header -->
  <section class="contenido">
    <h1>Actuaciones</h1>
    <article>
      <form action="/actors/acting" method="POST" class= "create">
        <label for="Movie">Pelicula</label>
        <select name="movies">
          <% movies.forEach(movie => { %>
            <option value= <%= movie.id %>> <%= movie.title %></option>
          <% }); %>
        </select>
        <label for="Actores">Actores</label>
        <select name="actores" multiple class= "multiple">
          <% actors.forEach(actor => { %>
            <option value= "<%= actor.id %>"> 
              <%= actor.first_name %>
              <%= actor.last_name %>
            </option>
          <% }); %>
        </select>
        <button type="submit">Guardar Actuaci√≥n</button>
    </form>
    </article>
  </section>
</body>
</html>