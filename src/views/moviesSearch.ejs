<!DOCTYPE html>
<html>
<head>
  <title>Peliculas</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href='/stylesheets/styleheader.css'>
</head>
<body>
  <!-- start header -->
    <%- include('partials/header'); %> 
  <!-- end header -->
  <main class="contenido">
    <h1>Resultados</h1>
    <!-- start search -->
      <%- include('partials/search'); %> 
    <!-- end search -->
    <section class="flex-container">
      <% if ( movies.length == 0) { %>   
        <h2>Pelicula no encontrada, por favor intente de nuevo.</h2>
      <% } else { %>
      <% movies.forEach(movie => { %>
        <article class="grid-waper">
          <img src="<%= movie.img %>" onerror="if (this.src != 'undefine.jpg') this.src = '/images/undefine.jpg';"  class="img" alt="image">
          <a href="/movies/detail/<%=movie.id%>" class="title">
            <%= movie.title%>  <!-- <%=orden%> -->
          </a>
        </article>
      <% }); %>
      <% }; %>
    </section>
  </main>
</body>
</html>